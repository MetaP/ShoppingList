<div class="list">
    @if (List.Title.Length > 0)
    {
        <div id="Title" class="title">@List.Title</div>
    }
    <input id="NewCaption" type="text" @bind="NewCaption" @onkeyup="OnKeyUp_NewCaption"/>
    @foreach (ListItem item in List.Items)
    {
        <ListItemView ListItem="item" />
    }
</div>
